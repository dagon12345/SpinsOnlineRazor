@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#RegionID').change(function () {
                var regionId = $(this).val();
                if (regionId) {
                    $.ajax({
                        type: "GET",
                        url: "/Beneficiaries/Create?handler=Provinces",
                        data: { regionId: regionId },
                        success: function (provinces) {
                            $("#ProvinceID").empty();
                            $("#ProvinceID").append('<option value="">--Select Province--</option>');
                            $.each(provinces, function (key, value) {
                                $("#ProvinceID").append('<option value="' + value.provinceID + '">' + value.name + '</option>');
                            });
                        }
                    });
                } else {
                    $("#ProvinceID").empty();
                    $("#MunicipalityID").empty();
                    $("#BarangayID").empty();
                }
            });

            $('#ProvinceID').change(function () {
                var provinceId = $(this).val();
                if (provinceId) {
                    $.ajax({
                        type: "GET",
                        url: "/Beneficiaries/Create?handler=Municipalities",
                        data: { provinceId: provinceId },
                        success: function (municipalities) {
                            $("#MunicipalityID").empty();
                            $("#MunicipalityID").append('<option value="">--Select Municipality--</option>');
                            $.each(municipalities, function (key, value) {
                                $("#MunicipalityID").append('<option value="' + value.municipalityID + '">' + value.name + '</option>');
                            });
                        }
                    });
                } else {
                    $("#MunicipalityID").empty();
                    $("#BarangayID").empty();
                }
            });

            $('#MunicipalityID').change(function () {
                var municipalityId = $(this).val();
                if (municipalityId) {
                    $.ajax({
                        type: "GET",
                        url: "/Beneficiaries/Create?handler=Barangays",
                        data: { municipalityId: municipalityId },
                        success: function (barangays) {
                            $("#BarangayID").empty();
                            $("#BarangayID").append('<option value="">--Select Barangay--</option>');
                            $.each(barangays, function (key, value) {
                                $("#BarangayID").append('<option value="' + value.barangayID + '">' + value.name + '</option>');
                            });
                        }
                    });
                } else {
                    $("#BarangayID").empty();
                }
            });
        });
    </script>
